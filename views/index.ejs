<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-title" content="GaragePi">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <link rel="apple-touch-icon" href="/icon.png">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="robots" content="noindex,nofollow">
    <title>Adicbot</title>
</head>

<body>

    <div class="container" style="  display: flex;
    width: 100vw;
    height: 100vh;
    justify-content: center;
    align-items: center;
    ">
        <div class="row">
            <div class="input-field col s6">
                <input placeholder="Password" id="pass" type="text" class="validate">
                <label for="first_name">Message</label>
            </div>
            <div class="input-field col s6">
                <button id="activate" class="btn waves-effect waves-light" type="submit" name="action">Send
                    <i class="material-icons right">send</i>
                </button>
            </div>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.fixed-action-btn').floatingActionButton();
        })
        $("#activate").click(function (e) {
            e.preventDefault();
            datagar = {
                message: document.getElementById("pass").value,
            }
            console.log(datagar);
            $.ajax({
                contentType: "application/json",
                type: "POST",
                url: "/comp",
                data: JSON.stringify(datagar),
                success: function (result) {
                    alert(result.response)
                },
                error: function (result) {
                    alert('Error/Unathorized');
                }
            });
        });
    </script>
</body>

</html>